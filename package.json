{
  "name": "@bitaccess/coinlib-monorepo",
  "version": "0.0.1",
  "description": "Monorepo for coinlib: unified interface for sending and receiving crypto payments",
  "repository": "https://github.com/bitaccess/coinlib",
  "author": "Dylan Seago <dylan@bitaccess.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitaccess/coinlib/issues"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "install:all": "lerna add",
    "remove:all": "lerna exec npm uninstall",
    "lint": "bin/find-bad-imports.sh && eslint packages/*/src packages/*/test --ext .ts,.js",
    "format": "lerna run --parallel format",
    "docs": "lerna run --parallel docs",
    "prebuild": "npm run lint && lerna run --parallel prebuild",
    "build": "bin/buildall.sh",
    "pretest": "npm run lint",
    "test": "jest --projects packages/*",
    "release": "npm run bs && lerna publish from-git",
    "link": "lerna link convert && link-parent-bin",
    "postinstall": "link-parent-bin",
    "clean-node-modules": "rm -rf node_modules packages/*/node_modules",
    "cleaninstall": "npm run clean-node-modules && npm install"
  },
  "devDependencies": {
    "@faast/ts-common": "^0.6.0",
    "@faast/ts-config": "^1.3.5",
    "@types/bs58": "^4.0.1",
    "@types/elliptic": "^6.4.10",
    "@types/events": "^3.0.0",
    "@types/jest": "^27.0.2",
    "@types/jssha": "^2.0.0",
    "@types/lodash": "^4.14.149",
    "@types/node-fetch": "^2.5.0",
    "@types/promise-retry": "^1.1.3",
    "@types/qs": "^6.9.0",
    "@types/request-promise-native": "^1.0.17",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "builtin-modules": "^3.2.0",
    "coveralls": "^3.0.2",
    "debug": "^4.3.2",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "ganache": "^7.0.4",
    "husky": "^3.0.9",
    "jest": "^27.2.4",
    "jest-circus": "^27.2.4",
    "jest-cli": "^27.3.1",
    "jest-config": "^27.2.4",
    "lerna": "^4.0.0",
    "link-parent-bin": "^2.0.0",
    "lint-staged": "^11.2.6",
    "nock": "^11.7.1",
    "node-fetch": "^2.6.7",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "rollup": "^2.27.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.4",
    "lodash": "^4.17.21"
  },
  "dependencies": {
    "@bitaccess/coinlib": "file:packages/coinlib",
    "@bitaccess/coinlib-bitcoin": "file:packages/coinlib-bitcoin",
    "@bitaccess/coinlib-bitcoin-cash": "file:packages/coinlib-bitcoin-cash",
    "@bitaccess/coinlib-common": "file:packages/coinlib-common",
    "@bitaccess/coinlib-doge": "file:packages/coinlib-doge",
    "@bitaccess/coinlib-ethereum": "file:packages/coinlib-ethereum",
    "@bitaccess/coinlib-litecoin": "file:packages/coinlib-litecoin",
    "@bitaccess/coinlib-ripple": "file:packages/coinlib-ripple",
