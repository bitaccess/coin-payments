{
  "name": "@bitaccess/coinlib-tron",
  "version": "5.1.0",
  "description": "Library to assist in processing tron payments, such as deriving addresses and sweeping funds",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "types": "dist/lib/index.d.ts",
  "esnext": "dist/lib/index.js",
  "repository": "https://github.com/bitaccess/coinlib/tree/master/packages/coinlib-tron",
  "homepage": "https://github.com/bitaccess/coinlib/tree/master/packages/coinlib-tron#readme",
  "bugs": {
    "url": "https://github.com/bitaccess/coinlib/issues"
  },
  "keywords": [
    "coin",
    "payments",
    "crypto",
    "tron",
    "bip44",
    "trx",
    "bitaccess"
  ],
  "contributors": [
    "Moe Adham <moe@bitaccess.ca>",
    "Dylan Seago <dylan@bitaccess.ca>"
  ],
  "license": "MIT",
  "files": [
    "dist/",
    "src/"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "bin/docs.sh",
    "prebuild": "rimraf dist && rimraf docs",
    "build": "bin/build.sh",
    "start": "rollup -c rollup.config.js -w",
    "test": "jest --runInBand --bail",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "version": "npm run build"
  },
  "dependencies": {
    "@bitaccess/coinlib-common": "^5.1.0",
    "@faast/ts-common": "^0.6.0",
    "bignumber.js": "^9.0.0",
    "bip32": "^2.0.5",
    "elliptic": "^6.4.1",
    "io-ts": "^1.10.4",
    "js-sha3": "^0.8.0",
    "jssha": "^2.3.1",
    "lodash": "^4.17.15",
    "promise-retry": "^1.1.1",
    "tronweb": "^2.10.1"
  },
  "devDependencies": {
    "@faast/ts-config": "^1.3.5",
    "@types/elliptic": "^6.4.10",
    "@types/jest": "^27.0.2",
    "@types/jssha": "^2.0.0",
    "@types/lodash": "^4.14.123",
    "@types/node": "^14.0.24",
    "@types/promise-retry": "^1.1.3",
    "coveralls": "^3.0.2",
    "jest": "^27.2.4",
    "jest-circus": "^27.2.4",
    "jest-config": "^27.2.4",
    "lint-staged": "^8.0.0",
    "node-fetch": "^2.6.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "rollup": "^2.27.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.0",
    "typescript": "^4.2.4"
  }
}
