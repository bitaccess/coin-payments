{
  "name": "@bitaccess/coinlib-litecoin",
  "version": "5.2.1",
  "description": "Library to assist in processing litecoin payments, such as deriving addresses and sweeping funds",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "types": "dist/lib/index.d.ts",
  "esnext": "dist/lib/index.js",
  "repository": "https://github.com/bitaccess/coinlib/tree/master/packages/coinlib-litecoin",
  "homepage": "https://github.com/bitaccess/coinlib/tree/master/packages/coinlib-litecoin#readme",
  "bugs": {
    "url": "https://github.com/bitaccess/coinlib/issues"
  },
  "keywords": [
    "coin",
    "payments",
    "crypto",
    "litecoin",
    "segwit",
    "ltc",
    "bitaccess"
  ],
  "contributors": [
    "Moe Adham <moe@bitaccess.ca>",
    "Dylan Seago <dylan@bitaccess.ca>",
    "Dan Wolfgram <dan@bitaccess.co>"
  ],
  "license": "MIT",
  "files": [
    "dist/",
    "src/"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "bin/docs.sh",
    "prebuild": "rimraf dist && rimraf docs",
    "build": "bin/build.sh",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --runInBand --bail",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "version": "npm run build"
  },
  "dependencies": {
    "@bitaccess/coinlib-bitcoin": "file:../coinlib-bitcoin",
    "@bitaccess/coinlib-common": "file:../coinlib-common",
    "@faast/ts-common": "^0.6.0",
    "@types/lodash": "^4.14.150",
    "bip174-bigint": "github:bitaccess/bip174#bigint",
    "bip32": "^2.0.5",
    "bitcoinjs-lib-bigint": "github:bitaccess/bitcoinjs-lib#bigint-5-2-0",
    "bs58": "^4.0.1",
    "bs58check": "^2.1.2",
    "io-ts": "^1.10.4",
    "lodash": "^4.17.15",
    "promise-retry": "^1.1.1",
    "request-promise-native": "^1.0.8"
  }
}
